{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "outDir": "./build",
        "rootDir": "./src",
        "declaration": false,
        "strict": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "alwaysStrict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "experimentalDecorators": true
    },
    "exclude": ["./build/*", "./node_modules/*"],
    "include": ["./src"]
}
